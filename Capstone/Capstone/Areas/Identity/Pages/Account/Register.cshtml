@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container" style="text-align:center">
    <div class="row" style="text-align:center">
      <h2>New Account</h2>
        <div class="col-md-4" style="background-color:slategray;margin-left:32%;margin-right:30%">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.isCompanyAccount"></label>
                    <input asp-for="Input.isCompanyAccount" class="form-control" />
                    <span asp-validation-for="Input.isCompanyAccount" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Register</button>
            </form>
        </div>
    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
