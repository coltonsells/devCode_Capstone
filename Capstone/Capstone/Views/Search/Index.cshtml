@model Capstone.Models.SearchViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{

    <div class="container">
        <div class="row" style="display:inline">
            <div class="col-sm-2">
                <div class="form-group">
                    <h4>Retail</h4>
                    <input type="checkbox" name="filterRetail"  />
                </div>
                <div class="form-group">
                    <h4>Service</h4>
                    <input type="checkbox" name="filterService" />
                </div>
                <div class="form-group">
                    <h4>Entertainment</h4>
                    <input type="checkbox" name="filterEntertainment" />
                </div>
                <div class="form-group">
                    <h4>Manufacturing</h4>
                    <input type="checkbox" class="checkbox" name="filteredManufacturing" />
                </div>

            </div>
            <div class="col-sm-10">
                <input type="text" name="UserInput" />
                <input type="submit" class="btn" />
            </div>

            @{
                foreach (var comp in Model.Companies)
                {
                    HomePageViewModel vm = new HomePageViewModel();
                    vm.Comp = comp;
                    vm.Image = Model.Images.Where(x => x.companyId == comp.Id).FirstOrDefault();
                    <div class="col-sm-4" style="margin-bottom:3%">
                        @Html.Partial("WebsiteSummary", vm)
                    </div>
                }
            }
        </div>
    </div>

}