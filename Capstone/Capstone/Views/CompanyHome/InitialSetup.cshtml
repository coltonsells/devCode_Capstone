
@{
    ViewData["Title"] = "InitialSetup";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<h2>InitialSetup</h2>
@using (Html.BeginForm())
{
<div class="container">
    <div id="intro">
        <p>
            ALright lets get the layout of your home page set up
        </p>
    </div>
    <div id="navTag">
        <p>
            First, what would you like your home page to be called on your navBar (Usually the name of your company?)
            <div class="form-control">
                <input type="text" name="navTag" />
            </div>
        </p>
    </div>
    <div id="picText">
        <p>
            Next we will add your picture to the front page jumbotron. What text would you like to appear over your picture?
            <div class="form-control">
                <input type="text" name="picText" />
            </div>
        </p>
    </div>
    <div id="jumboTextAlign">
        <p>
            How would you like that text aligned?
            <div class="form-control">
                <select class="form-control" id="jumboTextAlignment" name="jumboTextAlignment">
                    <option>--Select--</option>
                    <option>Left</option>
                    <option>Right</option>
                    <option>Center</option>
                </select>
            </div>
        </p>
    </div>
    <div id="jumboTextFont">
        <p>
            What font would you like?
        </p>
            <div class="form-control">
                <select class="form-control" id="jumboTextFont" name="jumboTextFont">
                    <option>--Select--</option>
                    <option>Times New Roman</option>
                    <option>Arial</option>
                    <option>Georgia</option>
                </select>
            </div>
        </div>
    <div id="jumboColor">
        <p>Finally, what color do you want the text to be</p>
        <div class="form-control">
            <select class="form-control" id="jumboColor" name="jumboColor">
                <option>--Select--</option>
                <option>White</option>
                <option>Black</option>
                <option>Red</option>
                <option>Blue</option>
            </select>
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" />
    </div>
</div>
}