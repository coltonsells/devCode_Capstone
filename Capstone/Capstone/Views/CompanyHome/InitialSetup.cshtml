
@{
    ViewData["Title"] = "InitialSetup";
    //Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}

<h2>Initial Setup</h2>
@using (Html.BeginForm())
{
<div class="container" style="text-align:center;color:white">
    <div id="intro">
        <h2>
            Alright lets get the layout of your home page setup
        </h2>
    </div>
    <div id="navTag">
        <h6>
            First, what would you like your home page to be called on your navBar (Usually the name of your company?)
            <br />
            <br />
            <div>
                <input style="color:black" type="text" name="navTag" />
            </div>
        </h6>
    </div>
    <div id="picText">
        <h6>
            Next we will add your picture to the front page jumbotron. What text would you like to appear over your picture?
        </h6>
            <div>
                <textarea type="text" name="picText" rows="10" cols="50" style="color:black"></textarea>
            </div>
 
    </div>
    <div id="jumboTextAlign">
        <h6>
            How would you like that text aligned?
        </h6>
        <div class="col-md-6" style="margin-right:25%;margin-left:25%">
            <select class="form-control" id="jumboTextAlignment" name="jumboTextAlignment">
                <option>--Select--</option>
                <option>Left</option>
                <option>Right</option>
                <option>Center</option>
            </select>
        </div>
    </div>
    <div id="jumboTextFont">
        <h6>
            What font would you like?
        </h6>
        <div class="col-md-6" style="margin-right:25%;margin-left:25%">
            <select class="form-control" id="jumboTextFont" name="jumboTextFont">
                <option>--Select--</option>
                <option>Times New Roman</option>
                <option>Arial</option>
                <option>Georgia</option>
            </select>
        </div>
    </div>
    <div id="jumboColor">
        <h6>What color do you want the text to be</h6>
        <div class="col-md-6" style="margin-right:25%;margin-left:25%">
            <select class="form-control" id="jumboColor" name="jumboColor">
                <option>--Select--</option>
                <option>White</option>
                <option>Black</option>
                <option>Red</option>
                <option>Blue</option>
            </select>
        </div>
    </div>
    <div id="jumboTextSize">
        <h6>Finally, what size do you want the text to be</h6>
        <div class="col-md-6" style="margin-right:25%;margin-left:25%">
            <select class="form-control" id="jumboTextSize" name="jumboTextSize">
                <option>--Select--</option>
                <option>small</option>
                <option>smaller</option>
                <option>medium</option>
                <option>large</option>
                <option>larger</option>
                <option>x-large</option>
                <option>xx-large</option>
            </select>
        </div>
    </div>
    <div>
        <br />
        <br />
        <input type="submit" class="btn btn-primary" />
    </div>
</div>
}