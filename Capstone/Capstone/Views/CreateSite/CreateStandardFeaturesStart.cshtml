<script>

    $(document).ready(function () {
        $(window).keydown(function (event) {
            if (event.keyCode == 13) {
                event.preventDefault();
                return false;
            }
        });
    });

    $("#introContButton").click(function () {
        var el = document.getElementById("contact")
        el.scrollIntoView({
            behavior: 'auto',
            block: 'center',
            inline: 'center'
        });
    });

    $("#backIntroButton").click(function () {
        var el = document.getElementById("intro")
        el.scrollIntoView({
            behavior: 'auto',
            block: 'center',
            inline: 'center'
        });
    });

    $("#contactContButton").click(function () {
        var el = document.getElementById("picture")
        el.scrollIntoView({
            behavior: 'auto',
            block: 'center',
            inline: 'center'
        });
    });


    $("#backContactButton").click(function () {
        var el = document.getElementById("contact")
        el.scrollIntoView({
