
@{
    ViewData["Title"] = "ContactContainerSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact Container Setup</h2>

@using (Html.BeginForm())
{


    <div class="container">
        <div class="row" style="text-align:center;color:white">
            <h3>
                Now let's set up the content of your Contact Page
            </h3>
            <h6>
                Contact Pages can have up to three rows. The containers will take up the entire width of the page. How many containers do you want?
            </h6>
        </div>
        <button type="submit" class="btn col-sm-12" id="paragraph" name="container" value="1" style="background:none">
            <div id="oneParagraph" class="row">
                <div class="col-md-12 text-center" style="height:10%; border:solid">
                    <br />
                    <span style="margin-top:auto;margin-bottom:auto;font-size:xx-large">1</span>
                    <br />
                    <br />
                </div>
            </div>
        </button>
        <br />
        <button type="submit" class="btn col-sm-12" style="background:none;" name="container" id="paragraph" value="2">
            <div class="row">
                <div class="col-sm-12 text-center" style="height:10%; border:solid">
                    <br />
                    <span style="margin-top:auto;margin-bottom:auto;font-size:xx-large">2</span>
                    <br />
                    <br />
                </div>
                <div class="col-sm-12 text-center" style="height:10%; border:solid">
                    <br />
                    <span style="margin-top:auto;margin-bottom:auto;font-size:xx-large">2</span>
                    <br />
                    <br />
                </div>
            </div>
        </button>
        <br />
        <button type="submit" class="btn col-sm-12" style="background:none;" id="paragraph" name="container" value="3">
            <div class="row">
                <div class="col-sm-12 text-center" style="height:10%;border:solid">
                    <br />
                    <span style="margin-top:auto;margin-bottom:auto;font-size:xx-large">3</span>
                    <br />
                    <br />
                </div>
                <div class="col-sm-12 text-center" style="height:10%;border:solid">
                    <br />
                    <span style="margin-top:auto;margin-bottom:auto;font-size:xx-large">3</span>
                    <br />
                    <br />
                </div>
                <div class="col-sm-12 text-center" style="height:10%;border:solid">
                    <br />
                    <span style="margin-top:auto;margin-bottom:auto;font-size:xx-large">3</span>
                    <br />
                    <br />
                </div>
                <br />
                <br />
            </div>
        </button>
    </div>
