
@{
    ViewData["Title"] = "ContactInitialSetup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contact Initial Setup</h2>
@using (Html.BeginForm())
{
<div class="container" style="text-align:center">
    <div id="intro" style="color:white;text-align:center">
        <h3>
            Alright lets get the layout of your Contact page set up
        </h3>
    </div>
    <div id="navTag" style="text-align:center">
        <h7 style="color:white">
            First, what would you like your Contact page to be called on your navBar?
        </h7>
        <div class="col-md-6" style="margin-left:25%;margin-right:25%;margin-top:3%">
            <input type="text" name="navTag" style="text-align:center"/>
        </div>
    </div>
    <div style="margin-top:8%">
        <input type="submit" class="btn btn-primary"  />
    </div>
</div>
}
